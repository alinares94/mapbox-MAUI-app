@page "/map"
@inject IJSRuntime JS

<div id="map" class="map-size">
</div>

@code {
    protected async override Task OnAfterRenderAsync(bool firstRender)
    {
        await base.OnAfterRenderAsync(firstRender);
        if (firstRender)
            await JS.InvokeVoidAsync("displayMapJS");
    }
}
